<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" href="/semantic/dist/semantic.min.css" />
    <link rel="stylesheet" href="/style.css" />

    <script src="/jquery/jquery-3.1.0.min.js"></script>
    <script src="/semantic/dist/semantic.min.js"></script>
    <script src="/crypto/triplesec-3.0.14-min.js"></script>
    <script src="/kbpgp/kbpgp-2.0.8-min.js"></script>
    <script src="/utils.js"></script>
<script>
$(function() {
  init_all();
  var remembered = (get_passphrase_struct() == null)  ? "Passphrase: <span class='ko'>Unknown<span>" : "Passphrase: <span class='ok'>Remembered</span>";
  $('#ppstatus').html("<a href='/enterpassphrase'>" + remembered + "</a>");
});
</script>
</head>
<body>
  <div class="ui borderless main menu">
    <div class="ui text container">
      <span>
        <a href="/" class="item">Home</a>
      </span>
      <span id="navigate_menu">
        <a href="/navigate" class="item">Navigate</a>
      </span>
      <span>
        <a href="/upkey" class="item">Private Key</a>
      </span>
      <span id="ppstatus" class="item"></span>
      <span class="item">v0.0.1 (veeeeery rough!)</span>
    </div>
  </div>
  <div class="ui text container">
    <%= content %>
  </div>
</body>
</html>
